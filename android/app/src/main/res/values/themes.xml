<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Readout10minApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorTertiary">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Background color -->
        <item name="android:colorBackground" tools:targetApi="l">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryContainer</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Window animation style -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Window animation transition -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>